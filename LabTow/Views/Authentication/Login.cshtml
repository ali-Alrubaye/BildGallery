
@model BusinessLayer.Models.UserViewModel
<div class="row">
    <div class="col-lg-8">


        @using (Html.BeginForm("Login", "Authentication", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Use a local account to log in.</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.UserN, "User Name", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserN, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserN, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Pwd, "password", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Pwd, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Pwd, "", new { @class = "text-danger" })
                </div>
            </div>

            <p>
                @Html.ActionLink("Register as a new user", "Register")
            </p>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Log in" class="btn btn-default" />
                </div>
            </div>


        }
    </div>
</div>